{
  "name": "public",
  "version": "1.123.0",
  "private": true,
  "engines": {
    "node": "22.18.0"
  },
  "scripts": {
    "dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node -r tsconfig-paths/register src/index.ts'",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "lint": "pnpx eslint . --fix",
    "sonar": "sonar-scanner -X",
    "generate:openapi": "export GENERATE_OPENAPI=true && pnpm run build && node dist/apps/public_api/src/docs.js"
  },
  "_moduleAliases": {
    "@": "./src",
    "@core": "../../packages/core/"
  }
}